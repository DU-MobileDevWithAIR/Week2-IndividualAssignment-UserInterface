<s:View xmlns:fx="http://ns.adobe.com/mxml/2009"
               xmlns:s="library://ns.adobe.com/flex/spark"
               title="Register">

    <fx:Style>

        .registerTitle{
            fontSize: 35;
            horizontalCenter: 0;
            top: 60;
        }

        .inputTitleText {
            horizontalCenter: 0;
            fontSize: 16;
        }

        .regInput {
            horizontalCenter: 0;
            top: 20;
            fontSize: 16;
        }


     </fx:Style>

    <!-- TODO: Create the Register View UI -->

    <s:Scroller width="100%" height="110%">
        <s:Group styleName="mainCont" width="100%">
            <s:Label
                    styleName="registerTitle"
                    text="Register"/>

            <s:VGroup  gap="20" top="125" horizontalCenter="0" height="600">

                <s:SkinnableContainer horizontalCenter="0" width="270">
                  <s:Label  percentWidth="100" styleName="inputTitleText" text="Username*"/>
                  <s:TextInput height="40" percentWidth="100" styleName="regInput" enabled="true" text="please choose a username"/>
                </s:SkinnableContainer>

                <s:SkinnableContainer horizontalCenter="0" width="270">
                    <s:Label  percentWidth="100" styleName="inputTitleText" text="Email*"/>
                    <s:TextInput height="40" percentWidth="100" styleName="regInput" enabled="true" text="please enter your email"/>
                </s:SkinnableContainer>

                <s:SkinnableContainer horizontalCenter="0" width="270">
                    <s:Label  percentWidth="100" styleName="inputTitleText" text="Password*"/>
                    <s:TextInput height="40" percentWidth="100" styleName="regInput" enabled="true" text="please choose a password"/>
                </s:SkinnableContainer>

                <s:SkinnableContainer horizontalCenter="0" width="270">
                    <s:Label  percentWidth="100" styleName="inputTitleText" text="Confirm Password*"/>
                    <s:TextInput  height="40" percentWidth="100" styleName="regInput" enabled="true" text="please confirm your password"/>
                </s:SkinnableContainer>

                <s:SkinnableContainer textAlign="left">
                    <s:Label styleName="inputTitleText" text="Gender"/>
                </s:SkinnableContainer>

                <s:HGroup gap="20">
                    <s:SkinnableContainer>
                    <s:RadioButton
                            horizontalCenter="0"
                            label="Male"
                            fontSize="16"
                            />
                    </s:SkinnableContainer>
                    <s:SkinnableContainer>
                        <s:RadioButton
                                horizontalCenter="0"
                                label="Female"
                                fontSize="16"
                                />
                    </s:SkinnableContainer>
                </s:HGroup>

                <s:SkinnableContainer horizontalCenter="0">
                    <s:CheckBox id="agree" label="Agree to terms*" fontSize="14" horizontalCenter="0"/>
                </s:SkinnableContainer>

                <s:SkinnableContainer width="270">
                <s:Button styleName="regButton" width="120" label="Register" horizontalCenter="0" height="40" fontSize="14"/>
                </s:SkinnableContainer>

         </s:VGroup>
        </s:Group>
    </s:Scroller>

</s:View>