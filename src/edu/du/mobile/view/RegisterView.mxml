<s:View xmlns:fx="http://ns.adobe.com/mxml/2009"
    xmlns:s="library://ns.adobe.com/flex/spark">



    <s:Scroller
            top="50"
            bottom="80"
            left="0"
            right="0"

            >
    <s:VGroup
            width="100%"
            height="100%"
            paddingBottom="10"
            paddingTop="10"
            paddingRight="20"
            paddingLeft="20">
        <s:Label text="Register" fontSize="42"
                 />


    <s:TextInput id="USERNAME_ti" prompt="USER NAME" width="100%"/>
    <s:TextInput id="email_ti" prompt="Email" width="100%"/>
    <s:TextInput id="PASSWORDInput_ti" prompt="PASSWORD" displayAsPassword="true" width="100%"/>
    <s:TextInput id="CONFIRM_ti" prompt="CONFIRM PASSWORD" displayAsPassword="true" width="100%"/>


    <s:HGroup width="100%">
        <s:RadioButton id="MALERadioButtonRadioBtn" label="MALE"/>
        <s:RadioButton id="FEMALERadioButton" label="FEMALE"/>
    </s:HGroup>

    <s:CheckBox width="100%" label="AGREE TO TERMS"/>
    <s:Button id="submitBtn"
              label="Submit"
              width="100%"
            />


    </s:VGroup>
    </s:Scroller>



</s:View>