<s:View xmlns:fx="http://ns.adobe.com/mxml/2009"
        xmlns:s="library://ns.adobe.com/flex/spark">

    <s:Scroller width="100%" height="100%">
        <s:VGroup paddingLeft="50" width="100%">
            <s:Form skinClass="spark.skins.spark.StackedFormSkin" fontSize="20" >
                <s:layout>
                    <s:FormLayout gap="0"/>
                </s:layout>
                <s:HGroup horizontalAlign="center" width="100%" paddingTop="10">
                    <s:FormHeading label="Register" skinClass="spark.skins.spark.StackedFormHeadingSkin" fontSize="32"/>
                </s:HGroup>
                <s:FormItem label="Username" skinClass="spark.skins.spark.StackedFormItemSkin" required="true">
                    <s:TextInput width="350" prompt="please choose a password"/>
                </s:FormItem>
                <s:FormItem label="Email" skinClass="spark.skins.spark.StackedFormItemSkin" required="true">
                    <s:TextInput width="350" prompt="please enter your email"/>
                </s:FormItem>
                <s:FormItem label="Password" skinClass="spark.skins.spark.StackedFormItemSkin" required="true">
                    <s:TextInput width="350" prompt="please choose a password"/>
                </s:FormItem>
                <s:FormItem label="Confirm Password" skinClass="spark.skins.spark.StackedFormItemSkin" required="true">
                    <s:TextInput width="350" prompt="please confirm your password"/>
                </s:FormItem>
                <s:FormItem label="Gender" skinClass="spark.skins.spark.StackedFormItemSkin">
                    <s:HGroup>
                        <s:RadioButton label="Male"/>
                        <s:RadioButton label="Female"/>
                    </s:HGroup>
                </s:FormItem>
                <s:FormItem skinClass="spark.skins.spark.StackedFormItemSkin" required="true">
                        <s:CheckBox label="Agree to terms"/>
                </s:FormItem>
                <s:FormItem skinClass="spark.skins.spark.StackedFormItemSkin">
                    <s:HGroup horizontalAlign="center" width="100%">
                        <s:Button label="Register"/>
                    </s:HGroup>
                </s:FormItem>
            </s:Form>
        </s:VGroup>
    </s:Scroller>
</s:View>