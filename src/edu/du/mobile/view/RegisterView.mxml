<s:View xmlns:fx="http://ns.adobe.com/mxml/2009"
        xmlns:s="library://ns.adobe.com/flex/spark">

    <s:Scroller width="100%" height="100%">

        <s:Group width="100%">

            <s:Label text="Register" paddingTop="40" paddingBottom="30" fontSize="26" horizontalCenter="0"
                     styleName="style_title"/>

            <s:VGroup id="RegisterForm" fontSize="16"
                      top="100" left="30" right="30" textAlign="left" horizontalCenter="0"
                      width="70%" height="100%">

                <s:Label text="Username *"/>
                <s:TextInput id="username_reg" fontStyle="italic" height="40" width="100%"
                             prompt="please choose a username"/>

                <s:Label text="Email *" paddingTop="15"/>
                <s:TextInput id="email_reg" fontStyle="italic" height="40" width="100%"
                             prompt="please enter your email"/>

                <s:Label text="Password *" paddingTop="15"/>
                <s:TextInput id="password_reg" fontStyle="italic" height="40" width="100%"
                             prompt="please choose a password"/>

                <s:Label text="Confirm Password *" paddingTop="15"/>
                <s:TextInput id="confirm_reg" fontStyle="italic" height="40" width="100%"
                             prompt="please confirm your password"/>

                <s:Label text="Gender" paddingTop="15"/>
                <s:HGroup paddingTop="10" paddingBottom="20">
                    <s:RadioButton id="maleRadioBtn" label="Male" width="150"/>
                    <s:RadioButton id="femaleRadioBtn" label="Female" width="150"/>
                </s:HGroup>

                <s:CheckBox id="agreeRadioBtn" label="Agree to Terms *"/>

            </s:VGroup>

            <s:Button id="submit_btn" label="Register" top="600" horizontalCenter="0" height="40" fontSize="16"/>

        </s:Group>

    </s:Scroller>

</s:View>