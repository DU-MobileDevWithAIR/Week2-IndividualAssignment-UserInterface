<s:View xmlns:fx="http://ns.adobe.com/mxml/2009"
    xmlns:s="library://ns.adobe.com/flex/spark"
    title="Register">

    <fx:Style>
        .registerTitle{
            fontSize: 35;
            horizontalCenter: 0;
            top: 60;
        }

        .inputTitleText {
            horizontalCenter: 0;
        }

        .regInput {
            horizontalCenter: 0;
            top: 30;

        }




    </fx:Style>

    <!-- TODO: Create the Register View UI -->

    <s:Label
            styleName="registerTitle"
            text="Register"/>

    <s:VGroup gap="30" top="125" horizontalCenter="0">

        <s:SkinnableContainer horizontalCenter="0">
          <s:Label  width="80%" styleName="inputTitleText" text="Username*"/>
          <s:TextInput width="80%" styleName="regInput" enabled="true" text="please choose a username"/>
        </s:SkinnableContainer>

        <s:SkinnableContainer horizontalCenter="0">
            <s:Label  width="80%" styleName="inputTitleText" text="Email*"/>
            <s:TextInput width="80%" styleName="regInput" enabled="true" text="please enter your email"/>
        </s:SkinnableContainer>

        <s:SkinnableContainer horizontalCenter="0">
            <s:Label  width="80%" styleName="inputTitleText" text="Password*"/>
            <s:TextInput width="80%" styleName="regInput" enabled="true" text="please choose a password"/>
        </s:SkinnableContainer>

        <s:SkinnableContainer horizontalCenter="0">
            <s:Label  width="80%" styleName="inputTitleText" text="Confirm Password*"/>
            <s:TextInput width="80%" styleName="regInput" enabled="true" text="please confirm your password"/>
        </s:SkinnableContainer>

    </s:VGroup>


    <s:SkinnableContainer horizontalCenter="0" top="600">
        <s:Label  width="80%" styleName="inputTitleText" text="Confirm Password*"/>
