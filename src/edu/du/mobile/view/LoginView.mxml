<s:View xmlns:fx="http://ns.adobe.com/mxml/2009"
    xmlns:s="library://ns.adobe.com/flex/spark"
    title="Login">
    <s:VGroup width="100%" height="98%" horizontalAlign="center" id="loginGroup">
        <s:Form id="login" percentWidth="70">
            <s:FormHeading textAlign="center" label="Login" fontSize="26"/>
        <s:FormItem label="Username" required="true">
            <s:TextInput prompt="enter your username" percentWidth="100"/>
        </s:FormItem>
        <s:FormItem label="Password" required="true">
            <s:TextInput id="password_ti"
                         prompt="enter your password"
                         displayAsPassword="true"
                         percentWidth="100" />
        </s:FormItem>
        <s:FormItem>
            <s:HGroup horizontalAlign="center"
                      percentWidth="100">
                <s:Button label="Login"
                          id="submit_btn"/>
            </s:HGroup>
        </s:FormItem>
        </s:Form>
    </s:VGroup>
</s:View>
