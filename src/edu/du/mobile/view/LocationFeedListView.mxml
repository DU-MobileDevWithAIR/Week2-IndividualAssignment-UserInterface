<s:View xmlns:fx="http://ns.adobe.com/mxml/2009"
    xmlns:s="library://ns.adobe.com/flex/spark"
    title="Location Feed">
    <s:VGroup paddingLeft="20" paddingRight="20" paddingTop="30" width="100%" height="98%" horizontalAlign="center" id="listContain" >
   <s:Group width="100%"  fontSize="20" >
       <!-- In our "mock" for this assignment, the locations header was significantly smaller than the Registration header. -->
       <s:Label horizontalCenter="0" text="Nearby Locations" fontWeight="bold"/>
        <s:Label id="goHomeLabel" top="0" right="20" click="navigator.pushView( TemporaryView )" text="Done" color="blue" textDecoration="underline" />
   </s:Group>
        <s:List id="myList"
                labelField="Item"
                height="98%"
                width="96%"
                borderVisible="true"
                borderColor="black"
                scrollSnappingMode="leadingEdge"
                pageScrollingEnabled="true">
        <s:dataProvider>
            <s:ArrayCollection>
                <fx:Object Item="Item One" />
                <fx:Object Item="Item Two" />
                <fx:Object Item="Item Three" />
            </s:ArrayCollection>
        </s:dataProvider>
    </s:List>
    </s:VGroup>
</s:View>