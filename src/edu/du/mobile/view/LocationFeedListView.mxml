<s:View xmlns:fx="http://ns.adobe.com/mxml/2009"
        xmlns:s="library://ns.adobe.com/flex/spark">

    <s:Scroller width="100%" height="110%">

        <s:VGroup width="100%" gap="20" paddingTop="40" paddingBottom="40" horizontalCenter="0">

            <s:HGroup fontSize="16" horizontalCenter="0" width="100%">
                <s:SkinnableContainer fontSize="16" horizontalCenter="0" width="90%">
                    <s:Label horizontalCenter="0" text="Nearby Locations"/>
                    <s:Label right="15" text="Done" textDecoration="underline" color="blue"
                             click="navigator.pushView( TemporaryView )"/>
                </s:SkinnableContainer>
            </s:HGroup>

            <s:Group horizontalCenter="0" width="100%" fontSize="16">
                <s:List horizontalCenter="0" verticalCenter="0" width="90%" borderVisible="true"
                        borderColor="black" contentBackgroundColor="white" height="600">

                    <s:ArrayList>
                        <fx:Object label="Item One"/>
                        <fx:Object label="Item Two"/>
                        <fx:Object label="Item Three"/>
                    </s:ArrayList>

                </s:List>
            </s:Group>

        </s:VGroup>

    </s:Scroller>

</s:View>
